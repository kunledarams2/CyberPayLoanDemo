<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.LoadApplication">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/header_light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/nav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="24dp"

            android:background="@drawable/ic_baseline_keyboard_backspace_24"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/avenir_book"
            android:text="Loan Application"
            android:textColor="#4139AB"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/nav_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/whiteColor"
            android:progress="28"
            android:progressTint="@color/greenColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/form_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:background="@color/whiteColor"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_wrapper">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_book"
            android:padding="15dp"
            android:textFontWeight="600"
            android:text="A payment is the voluntary tender of money or its equivalent or of things of value by one party (such as a person or company) to another in exchange for goods, or services provided by them, or to fulfill a legal obligation." />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate your Loan"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/avenir_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Plan"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/avenir_book"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="   30.00"
            android:fontFamily="@font/avenir_book"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:background="@drawable/stroke_rectangle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Duration"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/avenir_book"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="   Select your duration"
            android:fontFamily="@font/avenir_book"
            android:layout_marginHorizontal="20dp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:background="@drawable/stroke_rectangle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upfront Payment"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/avenir_book"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="   2.00"
            android:fontFamily="@font/avenir_book"
            android:layout_marginHorizontal="20dp"

            android:background="@drawable/stroke_rectangle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refund"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/avenir_book"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="   1.400"
            android:fontFamily="@font/avenir_book"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/stroke_rectangle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/deep_blue_rectangle"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_wrapper" />

    <View
        android:layout_width="5dp"
        android:layout_height="0dp"

        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        android:background="@color/greenColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/form_wrapper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002" />


</androidx.constraintlayout.widget.ConstraintLayout>